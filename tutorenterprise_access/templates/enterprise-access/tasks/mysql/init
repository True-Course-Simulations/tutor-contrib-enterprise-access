mysql=(mysql -h "${MYSQL_HOST}" -P "${MYSQL_PORT}" -u root "-p${MYSQL_ROOT_PASSWORD}")

echo "Creating enterprise-access database and user (if missing)..."
"${mysql[@]}" <<EOF
CREATE DATABASE IF NOT EXISTS \`${ENTERPRISE_ACCESS_MYSQL_DATABASE}\` DEFAULT CHARACTER SET utf8mb4 DEFAULT COLLATE utf8mb4_unicode_ci;
CREATE USER IF NOT EXISTS '${ENTERPRISE_ACCESS_MYSQL_USERNAME}'@'%' IDENTIFIED BY '${ENTERPRISE_ACCESS_MYSQL_PASSWORD}';
GRANT ALL PRIVILEGES ON \`${ENTERPRISE_ACCESS_MYSQL_DATABASE}\`.* TO '${ENTERPRISE_ACCESS_MYSQL_USERNAME}'@'%';
FLUSH PRIVILEGES;
EOF

echo "enterprise-access database ready."
